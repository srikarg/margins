<script>

function getSelectionText() {
	var text = '';
	if (window.getSelection) {
		text = window.getSelection().toString();
	} else if (document.selection && document.selection.type != "Control") {
		text = document.selection.createRange().text;
	}
	return text;
}
var b = true;
var a = true;	

function toggle(x){
	if (a === true) {
		if (b === false){
			$("#checkbox-h-2a").attr("checked", false);
			$(".ui-content, .word").unbind('click');	
		}
		$(".content2").on("click", ".nostyle", function(e){
			e.preventDefault();
			$.mobile.changePage("/comments/"+ {{id}} +"/"+$(this).attr("name"));
		})
		$(".hasComments").addClass("underline");
	} else {
		$(".hasComments").removeClass("underline")
		$(".content2").unbind("click");
	}
	a = !a;
}

toggle(false);

function toggle2(x) {
	if (b === true) {
		if (a === false){
			$("#checkbox-h-2b").attr("checked", false);
			$(".hasComments").removeClass("underline");
			$(".content2").unbind("click");
		}
		var dictionary = $('#dictionary');
		$(".ui-content").on('click', ".word", function() {
			var query = $(this).text();
			$.getJSON('http://glosbe.com/gapi/translate?from=eng&dest=eng&format=json&phrase=' + encodeURIComponent(query) + '&pretty=true&pageSize=10&callback=?', function(data) {
				console.log(data.tuc + ' ' + data.tuc[0]);
				if (data.tuc[0] !== null && data.tuc[0] !== undefined) {
					dictionary.find('.header').html('<strong>Definition for <span class="word"></span></strong>');
					dictionary.find('.word').text(query);
					dictionary.find('.definition').text(data.tuc[0].meanings[0].text);
				}
				else {
					dictionary.find('.header').text('Error!');
					dictionary.find('.definition').text('Sorry, but the specified term was not found in the dictionary!');
				}
				dictionary.trigger('updatelayout');
				dictionary.popup('open');
			});
		});
	}
	else {
		$(".ui-content, .word").unbind('click');	
	}
	b = !b;
}
</script>
{% endblock %}
